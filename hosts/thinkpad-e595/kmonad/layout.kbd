;; (def) US-layout
(defsrc
    caps tab)

;; (def) Our useful aliases!
(defalias
    tap-or-hold-caps-lock (tap-hold-next-release 100 esc M-lalt)
    tap-hold-tab (tap-hold-next-release 100 tab C-M-lalt))

(deflayer primary
    @tap-or-hold-caps-lock
    @tap-hold-tab)
