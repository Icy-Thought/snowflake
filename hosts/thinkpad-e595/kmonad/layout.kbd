;; (def) US-layout
(defsrc
    tab caps)

;; (def) Our useful aliases!
(defalias
    hold-tab-as-hyper (tap-hold-next 1000 tab C-M-lalt :timeout-button XX)
    hold-caps-as-meta-lalt (tap-hold-next 1000 caps M-lalt :timeout-button XX))

(deflayer primary
    @hold-tab-as-hyper
    @hold-caps-as-meta-lalt)
