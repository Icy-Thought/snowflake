#!/usr/bin/env cached-nix-shell
#! nix-shell -i python3 -p pamixer

import argparse
import subprocess
import time

parser = argparse.ArgumentParser(
    prog="Audio Volume Control",
    description="A simple script to help control the volume levels of the audio transmitted by your hardware device(s)!",
    epilog="Please, try again.",
)

subparser = parser.add_subparsers(dest="command")

increase = subparser.add_parser("increase")
decrease = subparser.add_parser("decrease")
mute = subparser.add_parser("toggle-mute")
status = subparser.add_parser("status")

increase.add_argument(
    "-l", "--level",
    type=int,
    default=5,
    help="Increase audio volume levels by +x%. (default: +%(default)%)",
)

decrease.add_argument(
    "-l", "--level",
    type=int,
    default=5,
    help="Decrease audio volume levels by -x%. (default: -%(default)%)",
)

mute.add_argument(
    "-t", "--toggle-mute",
    action="store_true",
    help="Toggle mute for device audio system. (default: False)",
)


args = parser.parse_args()

mute_status = subprocess.run(
    ["pamixer", "--get-mute"],
    stdout=subprocess.PIPE,
    universal_newlines=True,
)
get_mute = mute_status.stdout.strip()

get_volume = subprocess.check_output(["pamixer", "--get-volume"])
volume_level = str(int(get_volume))


def notify(message):
    subprocess.Popen(
        [
            "notify-send",
            message,
            "-t", "500",
            "-h", "string:synchronous:volume",
            "-h", "int:value:" + volume_level,
            "-u", "low",
        ]
    )
    return


LEVEL = [" ", " ", "墳 ", " "]

percentage = int(get_volume)

if args.command == "toggle-mute" and get_volume == "false":
    ICON = LEVEL[0]
elif percentage <= 30:
    ICON = LEVEL[1]
elif 30 < percentage <= 70:
    ICON = LEVEL[2]
elif percentage > 70:
    ICON = LEVEL[3]
else:
    ICON = ""


def change_volume_level():
    if args.command == "toggle-mute" and get_mute == "true":
        subprocess.run(["pamixer", "-t"])
        notify(ICON + "Volume Level: " + volume_level + "%")
    elif args.command == "toggle-mute" and get_mute == "false":
        subprocess.run(["pamixer", "-t"])
        notify(ICON + "Mute Output Audio!")
    elif args.command == "increase":
        subprocess.run(["pamixer", "-i", str(args.level)])
        notify(ICON + "Volume Level: " + volume_level + "%")
    elif args.command == "decrease":
        subprocess.run(["pamixer", "-d", str(args.level)])
        notify(ICON + "Volume Level: " + volume_level + "%")
    else:
        return


change_volume_level()


def volume_status():
    if args.command == "status":
        while True:
            print(ICON + volume_level + "%")
            time.sleep(60)
    else:
        return


volume_status()
